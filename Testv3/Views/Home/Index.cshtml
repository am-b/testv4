@model PagedList.IPagedList<Testv3.Models.Announcement>
@using PagedList.Mvc;

@if (TempData["Message"] != null)
{
    <br />
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["Message"]</strong>
    </div>
}

@if (TempData["Error"] != null)
{
    <br />
    <div class="alert alert-danger alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@TempData["Error"]</strong>
    </div>
}
@if (TempData["NoIndividualRecord"] != null)
{
    @section Scripts {
        <script type="text/javascript">
            $(window).on('load', function () {
                var rec = "@TempData["NoIndividualRecord"]";
                console.log(rec);

                var rec1 = "@ViewBag.NoRecord";
                console.log(rec1);

                if (rec != null){
                    $('#myModal').modal('show');
                }

        });
        </script>
    }
}

@{
    ViewBag.Title = "Home Page";
}
<br />


@if (User.IsInRole("Student"))
{

    <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-body">
                        <strong>
                            You have to complete your Individual record before continuing.
                            <a href="/StudentInventory/IndividualRecord">Click here.</a>
                        </strong>
                    </div>
                </div>

            </div>
        </div>

        <div class="superMain">
            <div class="div0">
                <div class="announcementHeader">
                    <h4>&nbsp;Announcements</h4>
                </div>
                <div class="announcementContainer">
                    <br />
                    @foreach (var item in Model)
                    {
                            <div class="col-lg-12 col-xs-12">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">@Html.DisplayFor(modelItem => item.AnnouncementTitle)</h3>
                                    </div>
                                    <div class="box-body">
                                        <h5>@Html.DisplayFor(modelItem => item.AnnouncementBody)</h5>
