@model Testv3.Models.Announcement

@{
    ViewBag.Title = " Announcement Details";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.AnnouncementID)

        <div class="controls form-inline">
            @Html.Label("Announcement Date", htmlAttributes: new { @class = "control-label" })<br />
            @Html.EditorFor(model => model.AnnouncementDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
        <br />

        <div class="controls form-inline">
            @Html.Label("Announcement Title", htmlAttributes: new { @class = "control-label" })<br />
            @Html.EditorFor(model => model.AnnouncementTitle, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 70%;" , @readonly = "readonly" } })
        </div>
        <br />

        <div class="controls form-inline">
            @Html.Label("Body", htmlAttributes: new { @class = "control-label" })<br />
            @Html.TextAreaFor(model => model.AnnouncementBody, 10, 100, new { @class = "form-control", @style = "min-width: 70%;" , @readonly = "readonly" })
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-4 col-md-offset-5">
                @Html.ActionLink("Back", "Index", "Announcements", null, new { @class = "btn btn-default" })
            </div>
        </div>



    </div>
}

