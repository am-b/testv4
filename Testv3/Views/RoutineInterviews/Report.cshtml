@model Testv3.Models.StudentInterviewViewModel

@{
    ViewBag.Title = "Student's Routine Interview";
}
@section Scripts{
    <script>
        $(function () {
                $('#studentSection textarea').attr('disabled', 'disabled');
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="body-content">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="panel panel-default">
                    @*<div class="panel-body">*@
                        <div class="panel-heading">
                            <div class="controls form-inline">
                                @Html.Label("Student Name: ")
                                @Html.DisplayFor(model => model.StudentLastName), @Html.DisplayFor(model => model.StudentFirstName) @Html.DisplayFor(model => model.StudentMiddleName)
                                <div style="float:right;">
                                    @Html.Label("Completion Date: ")
                                    @Html.DisplayFor(model => model.CompletionDate)
                                </div>
                                <br />
                                @Html.Label("Student Number: ")
                                @Html.DisplayFor(model => model.StudentID)
                                <br />
                                @Html.Label("Program: ")
                                @Html.DisplayFor(model => model.Program)
                            </div>
                        </div>
                    <div class="panel-body">
                        <div id="studentSection">
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.Q1, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.Q1)<br /></span>
                                </p>
                            </div>
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.Q2, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.Q2)<br /></span>
                                </p>
                            </div>
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.Q3, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.Q3)<br /></span>
                                </p>
                            </div>
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.Q4, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.Q4)<br /></span>
                                </p>
                            </div>
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.Q5, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.Q5)<br /></span>
                                </p>
                            </div>
                            <br />
                            <div class="controls form-inline">
                                @Html.LabelFor(model => model.OtherMatters, htmlAttributes: new { @class = "control-label" })<br />
                                <p style="width: 70%; display: table;">
                                    <span style="display: table-cell; border-bottom: 1px solid black;">@Html.DisplayFor(model => model.OtherMatters)<br /></span>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
}
