<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Makati Medical Center College</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'><img src="~/Content/Images/logo.png" class="img-left" height="50" width="50" /></a>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">  
                    @if (User.IsInRole("Student"))
                    {
                        @*@Html.ActionLink("My Profile", "CreateEdit", "Student")</li>
                        <li>@Html.ActionLink("My Appointment", "Appointments", "Home")</li>*@
                    }

                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Create Announcements", "Index", "Announcements")</li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage Records<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Add records", "ManageRecords", "Home")</li>
                                <li>@Html.ActionLink("Counselling Feedback", "ManageRecords", "Home")</li>
                            </ul>
                        </li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Appointments<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Manage Appointments", "Appointments", "Home")</li>
                                <li>@Html.ActionLink("Pending Appointments", "Appointments", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Reports", "Reports", "Home")</li>
                        <li>@Html.ActionLink("Manage User Accounts", "Index", "Admin")</li>
                    }
                        
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year TEAM BBL</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
