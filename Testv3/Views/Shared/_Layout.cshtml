<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Makati Medical Center College Guidance Office</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" src="admin-lte/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" src="admin-lte/dist/css/AdminLTE.min.css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a class="logo" href='@Url.Action("Index", "Home")'><img src="~/Content/Images/logo.png" class="img-left" height="80" width="80" /></a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button" data-target=".navbar-collapse">
                    @*href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">*@
                    <span class="sr-only">Toggle navigation</span>
                    @*<span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>*@
                </a>
                <br />

                <div class="navbar-custom-menu">
                    @Html.Partial("_LoginPartial")
                </div>

            </nav>
        </header>
        @if (User.IsInRole("Counselor") )
        {
            <div class="navbar-collapse collapse" id="#.navbar-collapse">
                <aside class="main-sidebar">
                    <section class="sidebar">
                        <ul class="sidebar-menu" data-widget="tree">
                            <li class="header"></li>

                            <li><a href='@Url.Action("Index", "Announcements")'><i class="fa fa-th"></i>Create Announcements</a></li>
                            <li>
                                <a data-toggle="collapse" data-target="#records" class="collapsed" href="#"><i class="fa fa-folder"></i>Manage Records<span class="caret"></span></a>
                                <ul class="treeview-menu collapse" id="records">                                 
                                    <li><a href='@Url.Action("Index", "StudentInventory")'><i class="fa fa-dot-circle-o"></i>Student Inventory Records</a></li>
                                    <li><a href='@Url.Action("Index", "CounsellingContracts")'><i class="fa fa-dot-circle-o"></i>Counselling Contract</a></li>
                                    <li><a href='@Url.Action("Index", "PsychTest")'><i class="fa fa-dot-circle-o"></i>Psychological Test</a></li>
                                    <li><a href='@Url.Action("Index", "InitialInterviews")'><i class="fa fa-dot-circle-o"></i>Initial Interview</a></li>
                                    <li><a href='@Url.Action("Index", "RoutineInterviews")'><i class="fa fa-dot-circle-o"></i>Routine Interview</a></li>
                                    <li><a href='@Url.Action("Index", "CounsellingForms")'><i class="fa fa-dot-circle-o"></i>Individual Counselling</a></li>
                                    <li><a href='@Url.Action("Index", "CounsellingForms")'><i class="fa fa-dot-circle-o"></i>Group Counselling</a></li>
                                    <li><a href='@Url.Action("Index", "IncidentReports")'><i class="fa fa-dot-circle-o"></i>Incident Report</a></li>
                                    <li><a href='@Url.Action("Index", "AnecdotalRecords")'><i class="fa fa-dot-circle-o"></i>Anecdotal Record</a></li>
                                    <li><a href='@Url.Action("Index", "ExitInterviews")'><i class="fa fa-dot-circle-o"></i>Exit Interview</a></li>
                                </ul>
                            </li>
                            <li>
                                <a data-toggle="collapse" data-target="#Appointments" class="collapsed" href="#"><i class="fa fa-calendar"></i>Appointments<span class="caret"></span></a>
                                <ul class="treeview-menu collapse" id="Appointments">
                                    <li>@Html.ActionLink("Manage Appointments", "Appointments", "Home")</li>
                                    <li>@Html.ActionLink("Pending Appointments", "Appointments", "Home")</li>
                                </ul>
                            </li>
                            <li>
                                <a data-toggle="collapse" data-target="#charts" class="collapsed" href="#"><i class="fa fa-line-chart"></i>Charts<span class="caret"></span></a>
                                <ul class="treeview-menu collapse" id="charts">
                                    <li><a href='@Url.Action("Charts", "PsychTest")'><i class="fa fa-dot-circle-o"></i>Psychological Test</a></li>
                                    <li><a href='@Url.Action("Charts", "IncidentReports")'><i class="fa fa-dot-circle-o"></i>Incident Report</a></li>
                                    <li><a href='@Url.Action("Charts", "CounsellingForms")'><i class="fa fa-dot-circle-o"></i>Individual Counselling</a></li>
                                    <li><a href='@Url.Action("Charts", "CounsellingContracts")'><i class="fa fa-dot-circle-o"></i>Counselling Agreement</a></li>

                                </ul>
                            </li>
                            <li><a href='@Url.Action("Index", "Admin")'><i class="fa fa-users"></i>Manage User Accounts</a></li>

                        </ul>

                    </section>
                </aside>
            </div>
        }
        else if (User.IsInRole("Administrator")){
            <div class="navbar-collapse collapse" id="#.navbar-collapse">
                <aside class="main-sidebar">
                    <section class="sidebar">
                        <ul class="sidebar-menu" data-widget="tree">
                            <li class="header"> <br /></li>
                            <li><a href='@Url.Action("Index", "Announcements")'><i class="fa fa-th"></i>Create Announcements</a></li>
                            <li><a href='@Url.Action("Index", "Admin")'><i class="fa fa-users"></i>Manage User Accounts</a></li>
                        </ul>
                    </section>
                </aside>
            </div>
        }
        <div class="content-wrapper">
            <section class="content container-fluid">
                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                Makati Medical Center College Guidance Office
            </div>
            <p>&copy; @DateTime.Now.Year TEAM BBL</p>
        </footer>
    </div>


    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="dist/js/adminlte.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/admin-lte/js")
    @Scripts.Render("~/admin-lte/bower_components/jquery-slimscroll/jquery.slimscroll.min.js")
    @RenderSection("scripts", required: false)
</body>
</html> 