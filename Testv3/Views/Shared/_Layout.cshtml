<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Makati Medical Center College Guidance Office</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" src="bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" src="dist/css/AdminLTE.min.css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a class="logo" href='@Url.Action("Index", "Home")'><img src="~/Content/Images/logo.png" class="img-left" height="80" width="80" /></a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </header>
        @if (User.IsInRole("Administrator"))
        {
            <aside class="main-sidebar">
                <section class="sidebar">
                    <ul class="sidebar-menu" data-widget="tree">
                        <li class="header">You are logged in as </li>
                        <li>@Html.ActionLink("Create Announcements", "Index", "Announcements")</li>
                        <li>
                            <a data-toggle="collapse" data-target="#records" class="collapsed" href="#">Manage Records<span class="caret"></span></a>
                            <ul class="treeview-menu collapse" id="records">
                                <li>@Html.ActionLink("Add records", "ManageRecords", "Home")</li>
                                <li>@Html.ActionLink("Counselling Feedback", "ManageRecords", "Home")</li>
                            </ul>
                        </li>
                        <li>
                            <a data-toggle="collapse" data-target="#Appointments" class="collapsed" href="#">Appointments<span class="caret"></span></a>
                            <ul class="treeview-menu collapse" id="Appointments">
                                <li>@Html.ActionLink("Manage Appointments", "Appointments", "Home")</li>
                                <li>@Html.ActionLink("Pending Appointments", "Appointments", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Reports", "Reports", "Home")</li>
                        <li>@Html.ActionLink("Manage User Accounts", "Index", "Admin")</li>

                    </ul>

                </section>
            </aside>
        }
        <div class="content-wrapper">
            <section class="content container-fluid">
                @RenderBody()
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                Makati Medical Center College Guidance Office
            </div>
            <p>&copy; @DateTime.Now.Year TEAM BBL</p>
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
        </aside>
        <div class="control-sidebar-bg"></div>
    </div>
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="dist/js/adminlte.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/admin-lte/js")
    @RenderSection("scripts", required: false)
</body>
</html> 